<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.AcceptTerms">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/terms_of_use"
        android:textAppearance="@style/AppIntroPageTitle" />

    <ScrollView
        android:id="@+id/tou_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tou_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is were the Terms of use will go."
            android:textColor="@android:color/white" />
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acceptance_of_pp_and_tou_text"
        android:textColor="@android:color/white" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_accept_tou"
        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_use"
        android:textColor="@android:color/white" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_accept_pp"
        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="@android:color/white" />

</LinearLayout>