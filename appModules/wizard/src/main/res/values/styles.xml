<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppIntroPageTitle" parent="AppIntroDefaultHeading">
        <item name="android:textSize">@dimen/appIntroHeadingTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppIntroCustomPage">
        <item name="android:textAppearance">@style/AppIntroCustomPage.TextAppearance</item>
    </style>

    <style name="AppIntroCustomPage.TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ARCoreCompatibilityPageTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
    </style>
</resources>