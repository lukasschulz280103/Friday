<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friday.ar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.ar" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.friday.ar.FridayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.friday.ar.ui.WizardActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.friday.Wizard" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.friday.ar.ui.LicenseActivity"
            android:label="@string/license_activity_label" />
        <activity
            android:name="com.friday.ar.ui.StoreDetailActivity"
            android:theme="@style/AppTheme" />

        <receiver android:name="com.friday.ar.util.BootReciever">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.friday.ar.ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.friday.ar.ui.FullscreenActionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_action"
            android:parentActivityName="com.friday.ar.ui.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.friday.ar.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.friday.ar.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.friday.ar.ui.MainActivity"
            android:theme="@style/PreferenceActivityStyle">
            <intent-filter>
                <action android:name="com.friday.settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.friday.ar.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.friday.ar.ui.FeedbackSenderActivity"
            android:label="@string/app_feedback" />
        <activity
            android:name="com.friday.ar.ui.InfoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.friday.Info" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="9a85d5ff39417c8b72a7242e63d6fd53f43fe7f9" />

        <service
            android:name="com.friday.ar.service.FeedbackService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name="com.friday.ar.service.AccountSyncService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>