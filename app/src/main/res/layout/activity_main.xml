<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/viewflipperparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/asset_loading_indicator_conatiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/launcher_logo_bg_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextSwitcher
                android:id="@+id/asset_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp" />

            <ProgressBar
                android:id="@+id/asset_loading_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

>>>>>>> luke
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/start_actionmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:src="@drawable/google_cardboard" />

        <ViewFlipper
            android:id="@+id/main_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/page_main" />

            <include layout="@layout/page_profile" />

            <include layout="@layout/page_history" />

            <include layout="@layout/page_error" />
        </ViewFlipper>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_main_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>