<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/questrial_regular</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetMaterial</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Custom" parent="AppTheme" />

    <style name="AppTheme.Custom.Magenta">
        <item name="colorPrimary">@color/MagentaPrimaryColor</item>
        <item name="colorPrimaryDark">@color/MagentaPrimaryDarkColor</item>
        <item name="colorSecondary">@color/MagentaSecondaryColor</item>
        <item name="colorOnPrimary">@color/MagentaPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/MagentaSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Pink">
        <item name="colorPrimary">@color/PinkPrimaryColor</item>
        <item name="colorPrimaryDark">@color/PinkPrimaryDarkColor</item>
        <item name="colorSecondary">@color/PinkSecondaryColor</item>
        <item name="colorOnPrimary">@color/PinkPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/PinkSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Green">
        <item name="colorPrimary">@color/GreenPrimaryColor</item>
        <item name="colorPrimaryDark">@color/GreenPrimaryDarkColor</item>
        <item name="colorSecondary">@color/GreenSecondaryColor</item>
        <item name="colorOnPrimary">@color/GreenPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/GreenSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/BluePrimaryColor</item>
        <item name="colorPrimaryVariant">@color/BluePrimaryLightColor</item>
        <item name="colorPrimaryDark">@color/BluePrimaryDarkColor</item>
        <item name="colorSecondary">@color/BlueSecondaryColor</item>
        <item name="colorOnPrimary">@color/BluePrimaryTextColor</item>
        <item name="colorOnSecondary">@color/BlueSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Red">
        <item name="colorPrimary">@color/RedPrimaryColor</item>
        <item name="colorPrimaryDark">@color/RedPrimaryDarkColor</item>
        <item name="colorSecondary">@color/RedSecondaryColor</item>
        <item name="colorOnPrimary">@color/RedPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/RedSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Dark">
        <item name="colorPrimary">@color/DarkPrimaryColor</item>
        <item name="colorPrimaryDark">@color/DarkPrimaryDarkColor</item>
        <item name="colorSecondary">@color/DarkSecondaryColor</item>
        <item name="colorOnPrimary">@color/DarkPrimaryTextColor</item>
        <item name="colorOnSecondary">@color/DarkSecondaryTextColor</item>
    </style>

    <style name="AppTheme.Custom.Magenta.ActionBar" parent="AppTheme" />

    <style name="AppTheme.Custom.Pink.ActionBar" parent="AppTheme" />

    <style name="AppTheme.Custom.Red.ActionBar" parent="AppTheme" />

    <style name="AppTheme.Custom.Blue.ActionBar" parent="AppTheme" />

    <style name="AppTheme.Custom.Green.ActionBar" parent="AppTheme" />

    <style name="AppTheme.Custom.Dark.ActionBar" parent="AppTheme" />
    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="WizardTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PageTitle">
        <item name="android:textSize">60sp</item>

    </style>
    <style name="AppIntroPageTitle" parent="AppIntroDefaultHeading">
        <item name="android:textSize">@dimen/appIntroHeadingTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderMiddle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:typeface">serif</item>
    </style>
    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="PreferenceButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="PreferenceActivityStyle" parent="AppTheme">
        <item name="android:preferenceStyle">@style/PreferenceStyle</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetMaterial" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetMaterial.Style</item>
    </style>

    <style name="BottomSheetMaterial.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/manager_background</item>
    </style>
    <style name="UppercaseWarn">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/warn_red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="appNameTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextListItem">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfilePageItem">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="ProfilePageItem.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/questrial_regular</item>
    </style>

    <style name="ProfilePageItemIcon">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Base.Theme.MaterialComponents.Dialog.CustomAnimated">
        <item name="android:padding">0dp</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ColorfulTitle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ThemeSelectDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ThemeSelectDialog.Item" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textViewStyle">@style/ThemeSelectDialog.Item.Title</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="ThemeSelectDialog.Item.Title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Store" parent="AppTheme.NoActionBar">

    </style>

    <style name="Store.Detail" parent="Store">

    </style>

    <style name="Store.Detail.Group">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Store.Detail.Group.GroupHead">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Store.Header" parent="AppIntroPageTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Store.Card"></style>
    <style name="Store.Card.Title">
        <item name="android:textAppearance">@style/Store.Header</item>
    </style>

    <style name="Store.Card.Title.Middle">
        <item name="android:textSize">26sp</item>
    </style>
</resources>
