<resources>


    <style name="AppTheme.AppBarOverlay" parent="Base.Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="WizardTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PageTitle">
        <item name="android:textSize">60sp</item>

    </style>

    <style name="HeaderMiddle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:typeface">serif</item>
    </style>
    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenTheme.Dialog">
        <item name="android:windowAnimationStyle">@style/FullscreenTheme.Dialog</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PreferenceButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="PreferenceActivityStyle" parent="AppTheme">
        <item name="android:preferenceStyle">@style/PreferenceStyle</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="UppercaseWarn">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/warn_red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="appNameTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextListItem">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfilePageItem">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="ProfilePageItem.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/questrial_regular</item>
    </style>

    <style name="ProfilePageItemIcon">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Base.Theme.MaterialComponents.Dialog.CustomAnimated">
        <item name="android:padding">0dp</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ColorfulTitle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ThemeSelectDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ThemeSelectDialog.Item" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textViewStyle">@style/ThemeSelectDialog.Item.Title</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="ThemeSelectDialog.Item.Title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Store" parent="AppTheme.NoActionBar">

    </style>

    <style name="Store.Detail" parent="Store">

    </style>

    <style name="Store.Detail.Group">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Store.Detail.Group.GroupHead">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Store.Header" parent="AppIntroPageTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Store.Card"></style>
    <style name="Store.Card.Title">
        <item name="android:textAppearance">@style/Store.Header</item>
    </style>

    <style name="Store.Card.Title.Middle">
        <item name="android:textSize">26sp</item>
    </style>
</resources>
